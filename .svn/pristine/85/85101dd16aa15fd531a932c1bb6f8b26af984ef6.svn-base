<body>
<div class="margin clearfix">
    <div id="system_style">
        <div class="search_style">
            <div class="form-horizontal" id="search_form">
                <div class="row">
                    <div class="col-xs-6 form-group">
                        <select class="form-control" id="id1" style="width: 150px;float: left;margin-left: 100px;" onchange="change(this)">
                            <option th:each="entry:${search}" th:value="${entry.key}" th:attr="type=${entry.type}" th:text="${entry.value}">用户</option>
                        </select>
                        <select class="form-control" style="width: 100px;float: left;margin-left: 10px;">
                            <option th:each="item:${items}" th:value="${item.key}" th:text="${item.value}"></option>
                        </select>
                        <input type="text" class="form-control" style="width: 150px;float: left;"/>
                    </div>
                    <div class="col-xs-6 form-group">
                        <select class="form-control" style="width: 150px;float: left;" onchange="change(this)">
                            <option th:each="entry:${search}" th:value="${entry.key}" th:attr="type=${entry.type}" th:text="${entry.value}">用户</option>
                        </select>
                        <select class="form-control" style="width: 100px;float: left;margin-left: 10px;">
                            <option th:each="item:${items}" th:value="${item.key}" th:text="${item.value}"></option>
                        </select>
                        <input type="text" class="form-control" style="width: 150px;float: left;"/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-6 form-group" style="display:none;">
                        <select class="form-control" style="width: 150px;float: left;margin-left: 100px;" onchange="change(this)">
                            <option th:each="entry:${search}" th:value="${entry.key}" th:attr="type=${entry.type}" th:text="${entry.value}">用户</option>
                        </select>
                        <select class="form-control" style="width: 100px;float: left;margin-left: 10px;">
                            <option th:each="item:${items}" th:value="${item.key}" th:text="${item.value}"></option>
                        </select>
                        <input type="text" class="form-control" style="width: 150px;float: left;"/>
                    </div>
                    <div class="col-xs-6 form-group"  style="display:none;">
                        <select class="form-control" style="width: 150px;float: left;" onchange="change(this)">
                            <option th:each="entry:${search}" th:value="${entry.key}" th:attr="type=${entry.type}" th:text="${entry.value}">用户</option>
                        </select>
                        <select class="form-control" style="width: 100px;float: left;margin-left: 10px;">
                            <option th:each="item:${items}" th:value="${item.key}" th:text="${item.value}"></option>
                            <option value="endwith">结束于</option>
                        </select>
                        <input type="text" class="form-control" style="width: 150px;float: left;"/>
                    </div>
                    <div class="col-xs-10 form-group align-center">
                        <button class="btn btn-primary btn-bold" onclick="search()">
                            <i class="ace-icon fa fa-search align-top bigger-125"></i>
                            查询
                        </button>
                        <button class="btn btn-info btn-bold" onclick="reset_search()">
                            <i class="ace-icon fa fa-refresh align-top bigger-125"></i>
                            重置
                        </button>
                    </div>
                    <div class="col-xs-2 form-group align-center">
                        <div class="action-buttons">
                            <a onclick="show1()" href="javascript:void(0)" class="blue bigger-200 show-details-btn" title="展开" id="open1" >
                                <i class="ace-icon fa fa-angle-double-down"></i>
                                <span class="sr-only"></span>
                            </a>
                            <a onclick="hide1()" href="javascript:void(0)" class="blue bigger-200 show-details-btn" style="display:none;" id="close1" title="关闭">
                                <i class="ace-icon fa fa-angle-double-up"></i>
                                <span class="sr-only"></span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="border clearfix">
               <span class="l_f">
                <a th:if="${session.CURRENT_USER.getAuthList().contains('/selection/assignAgree')}" id="assignAgree" class="btn btn-warning" title="同意">同意</a>
                <a th:if="${session.CURRENT_USER.getAuthList().contains('/selection/assignRefuse')}" id="assignRefuse" class="btn btn-danger" title="驳回">驳回</a>
               </span>
        </div>
        <div>
            <table class="table table-striped table-bordered table-hover" id="sample-table">
                <thead>
                <tr>
                    <th width="25" rowspan="2"><label><input type="checkbox" class="ace"><span class="lbl"></span></label></th>
                    <th width="120px" rowspan="2">序号</th>
                    <th width="120px" rowspan="2">题名</th>
                    <th width="120px" rowspan="2">PISSN</th>
                    <th width="120px" rowspan="2">EISSN</th>
                    <th width="120px" rowspan="2">PISBN</th>
                    <th width="120px" rowspan="2">EISBN</th>
                    <th width="120px" rowspan="2">载体</th>
                    <th width="120px" rowspan="2">国别</th>
                    <th width="120px" rowspan="2">语种</th>
                    <th width="120px" rowspan="2">出版社</th>
                    <th width="120px" colspan="3">各项指标值</th>
                    <th width="120px" rowspan="2">国内订购</th>
                    <th width="120px" rowspan="2">曾被遴选</th>
                    <th width="120px" rowspan="2">荐购期刊</th>
                    <th width="120px" rowspan="2">状态</th>
                </tr>
                <tr>
                    <th width="120px">二次文摘</th>
                    <th width="120px">被引频次</th>
                    <th width="120px">总分值</th>
                </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>
<div id="add_ads_style"  style="display:none">
    <div class=" clearfix">
        <div id="category">
            <div class="widget-body">
                <div class="widget-main padding-8">
                    <div id="treeDemo" class="ztree"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--筛选配置-->
<div id="add_administrator_style" class="add_menber" style="display:none">
    <div class="form-group">
        <label class="form-label"><span class="c-red">*</span>审核意见：</label>
        <div class="formControls">
            <select style="width: 180px" id="trialOpinion">
                <option>yes</option>
                <option>no</option>
                <option>yee</option>
                <option>pass</option>
                <option>faile</option>
            </select>
        </div>
        <div class="col-4"> <span class="Validform_checktip"></span></div>
    </div>
    <div>
        <button class="btn btn-primary radius" id="assign" type="button" onclick="assign()">提交</button>
    </div>
</div>
<div th:replace="fragments/newjs :: commonjs"></div>
</body>
</html>
<script>
    var msg = "是否确认提交！",url = "", data = {}, open;
    function init(params) {
            var dutyTable = $("#sample-table").dataTable({
            "destroy": true,       //销毁表格对象
            "aLengthMenu": [10, 15, 20, 50, 100],  //用户可自选每页展示数量 5条或10条
            "searching": false,//禁用搜索（搜索框）
            "lengthChange": true,
            "paging": true,//开启表格分页
            "bProcessing": true,
            "bServerSide": true,
            "bAutoWidth": false,
            "deferRender": true,//延迟渲染
            "iDisplayLength": 10,
            "iDisplayStart": 0,
            "select": {
                style: 'os',
                selector: 'td:first-child'
            },
            "ordering": true,//全局禁用排序
            "ajax": {  //ajax方式向后台发送请求
                "type": "POST",
                "url": "getAuditAssignment",
                "dataType": "json",
                "data":params
            },
            "order": [],
            "columns": [//对接收到的json格式数据进行处理，data为json中对应的key
                {"data": "id"},
                {
                    "data": "index",
                    "render": function (data, type, row, meta) {
                        var startIndex = meta.settings._iDisplayStart;
                        return startIndex + meta.row + 1;
                    }
                },
                {"data": "title",
                    "render": function (data, type, row, meta) {
                        return "<a href=\"/resourceRecommend/information?id="+row.recommendId+"&type=4\">"+data+"</a>";
                    }
                },
                {"data": "pissn"},
                {"data": "eissn"},
                {"data": "pisbn"},
                {"data": "eisbn"},
                {"data": "carrier"},
                {"data": "country"},
                {"data": "language"},
                {"data": "publisher"},
                {"data": "index",
                    "render": function (data, type, row, meta) {
                        return "";
                    }
                },
                // {"data": "publisher"},
                {"data": "pubFeq"},
                {"data": "index",
                    "render": function (data, type, row, meta) {
                        return "";
                    }
                },
                {"data": "index",
                    "render": function (data, type, row, meta) {
                        return "";
                    }
                },
                {"data": "index",
                    "render": function (data, type, row, meta) {
                        return "";
                    }
                },
                {"data": "seriesTitle"},
                {"data": "distributionStatus",
                    "render": function (data, type, row, meta) {
                    //0荐购审核未通过 1 未分配 2已分配 3审核通过 4审核驳回
                    if (data == 0)
                        return "荐购审核未通过";
                    else if (data == 1)
                        return "未分配";
                    else if (data == 2)
                        return "已分配";
                    else if (data == 3)
                        return "审核通过";
                    else if (data == 4)
                        return "审核驳回";
                    else if (data == 5)
                        return "订单驳回";
                    else
                        return "未定义";
                    }
                }
            ],
            //渲染
            "columnDefs": [
                {
                    "render": function (data, type, row) {
                        return '<label><input type="checkbox" class="ace" value="' + data + '"><span class="lbl"></span></label';
                    },
                    "targets": 0, //指定渲染列：第一列(渲染第一列为单选框，data自动匹配为  {"data":"id"}中数据）,
                    "orderable": false
                },{
                    "targets": 1, //指定渲染列：第一列(渲染第一列为单选框，data自动匹配为  {"data":"id"}中数据）,
                    "orderable": false
                }
            ]
            ,
            "oLanguage": { // 国际化配置
                "sProcessing": "正在获取数据，请稍后...",
                "sLengthMenu": "显示 _MENU_ 条",
                "sZeroRecords": "没有找到数据",
                "sInfo": "从 _START_ 到  _END_ 条记录 总记录数为 _TOTAL_ 条",
                "sInfoEmpty": "记录数为0",
                "sInfoFiltered": "(全部记录数 _MAX_ 条)",
                "sInfoPostFix": "",
                "sSearch": "查询",
                "sUrl": "",
                "oPaginate": {
                    "sFirst": "第一页",
                    "sPrevious": "上一页",
                    "sNext": "下一页",
                    "sLast": "最后一页"
                }
            }

        });
    }
    init("");

    function getIds(){
        // var nTrs = dutyTable.fnGetNodes();
        var nTrs = $("input[type=checkbox]:checked");
        if (nTrs.length == 0|| (nTrs.length==1 && (nTrs[0].value=="on"||nTrs[0].value==""))){
            DuzUtils.notifyWarning("请选择数据");
            return;
        }

        var ids = "";
        for (var i = 0; i < nTrs.length; i++) {
            if (nTrs[i].value == "on" || nTrs[i].value == ""){
                continue;
            }
            ids += nTrs[i].value;
            if (i < nTrs.length-1){
                ids += ",";
            }
        }
        return ids;
    }

    // 打开审核窗口
    $('#assignAgree').on('click', function(){
        url = "assignAgree";
        var ids =  getIds();
        data = {
            trialOpinion:$("#trialOpinion").val(),
            ids:ids,
        }
        openAssign();
    });
    $('#assignRefuse').on('click', function(){
        url = "assignRefuse";
        var ids =  getIds();
        data = {
            trialOpinion:$("#trialOpinion").val(),
            ids:ids,
        }
        openAssign();
    });
    // 弹出审核框
    function openAssign(){
        open = layer.open({
            type: 1,
            title:'审核',
            area: ['400px',''],
            shadeClose: false,
            content: $('#add_administrator_style'),
        });
    }
    // 审核
    function assign(){
        confrim(msg,url, data,function (data) {
            if (data.status == 0){
                layer.close(open);
                DuzUtils.notifySuccess("操作成功");
                init("");
            }else {
                DuzUtils.notifyError(data.msg);
            }
        })
    };

</script>

