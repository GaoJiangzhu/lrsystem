<html xmlns="http://www.w3.org/1999/xhtml" xmlns:th="http://www.thymeleaf.org"
      xmlns:layout="http://www.ultraq.net.nz/thymeleaf/layout"
      xmlns:sec="http://www.thymeleaf.org/thymeleaf-extras-springsecurity4">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta name="renderer" content="webkit|ie-comp|ie-stand">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta http-equiv="Cache-Control" content="no-siteapp"/>
    <link href="../new/assets/css/bootstrap.min.css" rel="stylesheet"/>
    <link rel="stylesheet" href="../new/css/style.css"/>
    <link href="../new/assets/css/codemirror.css" rel="stylesheet">
    <link rel="stylesheet" href="../new/assets/css/ace.min.css"/>
    <link rel="stylesheet" href="../new/font/css/font-awesome.min.css"/>
    <!--[if lte IE 8]>
    <link rel="stylesheet" href="../new/assets/css/ace-ie.min.css"/>
    <![endif]-->
    <link rel="stylesheet" href="../new/css/bootstrapStyle/bootstrapStyle.css" type="text/css">

    <script src="../new/js/jquery-1.9.1.min.js"></script>
    <script src="../new/assets/js/bootstrap.min.js"></script>
    <script src="../new/assets/js/typeahead-bs2.min.js"></script>
    <script src="../new/js/lrtk.js" type="text/javascript"></script>
    <script src="../new/assets/js/jquery.dataTables.min.js"></script>
    <script src="../new/assets/js/jquery.dataTables.bootstrap.js"></script>
    <script src="../new/assets/layer/layer.js" type="text/javascript"></script>
    <script src="../new/assets/laydate/laydate.js" type="text/javascript"></script>
    <script src="../new/js/H-ui.js" type="text/javascript"></script>
    <script src="../new/js/displayPart.js" type="text/javascript"></script>
    <script type="text/javascript" src="../business/common.js"></script>

    <script type="text/javascript" src="../new/Widget/zTree/js/jquery.ztree.all-3.5.min.js"></script>
    <script src="../new/js/lrtk.js" type="text/javascript"></script>
    <script type="text/javascript" src="../business/common.js"></script>
    <script type="text/javascript" src="../business/base.js"></script>
    <title>文章管理</title>
</head>
<body>
<div class="clearfix">
    <div class="article_style" id="article_style">
        <div class="Ads_list">

            <div th:replace="fragments/newjs :: search"></div>

            <div class="border clearfix">
               <span class="l_f">
                   <a th:if="${session.CURRENT_USER.getAuthList().contains('/user/add')}" href="/user/add" title="添加用户" id="add_page" class="btn btn-warning"><i
                           class="fa fa-plus"></i> 添加用户</a>
                    <a th:if="${session.CURRENT_USER.getAuthList().contains('/user/del')}" href="javascript:void(0);" class="btn btn-danger" onclick="dele()"><i class="fa fa-trash"></i> 批量删除</a>

               </span>
            </div>

            <div class="article_list">
                <table class="table table-striped table-bordered table-hover" id="sample-table">
                    <thead>
                    <tr>
                        <th width="25"><label><input type="checkbox" class="ace"><span class="lbl"></span></label></th>
                        <th width="80px">序号</th>
                        <th width="80px">登录名</th>
                        <th width="100">真实姓名</th>
                        <th width="130px">邮件地址</th>
                        <th width="50px">管理员</th>
                        <th width="50px">所属机构</th>
                        <th width="120px">创建于</th>
                        <th width="80px">最后登录</th>
                        <th width="120px">操作</th>
                    </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!--添加广告样式-->
<div id="add_ads_style"  style="display:none">
    <div class=" clearfix">
        <div id="category">
            <div class="widget-body">
                <div class="widget-main padding-8">
                    <div id="treeDemo" class="ztree"></div>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>
<script>
        $(function () {

            $(".displayPart").displayPart();


            $('table th input:checkbox').on('click', function () {
                var that = this;
                $(this).closest('table').find('tr > td:first-child input:checkbox')
                    .each(function () {
                        this.checked = that.checked;
                        $(this).closest('tr').toggleClass('selected');
                    });

            });
        })

        function init(params) {
            var dutyTable = $("#sample-table").dataTable({
                "destroy": true,       //销毁表格对象
                "aLengthMenu": [10, 15, 20, 50, 100],  //用户可自选每页展示数量 5条或10条
                "searching": false,//禁用搜索（搜索框）
                "lengthChange": true,
                "paging": true,//开启表格分页
                "bProcessing": true,
                "bServerSide": true,
                "bAutoWidth": false,
                "deferRender": true,//延迟渲染
                "iDisplayLength": 10,
                "iDisplayStart": 0,
                "select": {
                    style: 'os',
                    selector: 'td:first-child'
                },
                "ordering": true,//全局禁用排序
                "ajax": {  //ajax方式向后台发送请求
                    "type": "POST",
                    "url": "data",
                    // "data":{dutyUserId:uid},//传递的数据
                    "dataType": "json",
                    "data":params
                },
                "order": [],
                "columns": [//对接收到的json格式数据进行处理，data为json中对应的key
                    {"data": "id"},
                    {
                        "data": "index",
                        "render": function (data, type, row, meta) {
                            var startIndex = meta.settings._iDisplayStart;
                            return startIndex + meta.row + 1;
                        }
                    },

                    {"data": "username"},
                    {"data": "realName"},
                    {"data": "email"},
                    {"data": "isAdmin"},
                    {"data": "organName"},
                    {"data": "createDate"},
                    {"data": "loginDate"},
                    {
                        "data": "id",
                        "render": function (data, type, row, meta) {
                            return "<a title=\"重置\" onclick=\"reset('"+data+"')\" class=\"btn btn-xs btn-info\" >重置密码</a>"+
                                "<a title=\"编辑\" href=\"add?id="+data+"\" class=\"btn btn-xs btn-info\" >编辑</a>";
                        }
                    },

                ],
                //渲染
                "columnDefs": [
                    {
                        "render": function (data, type, row) {
                            return '<label><input type="checkbox" class="ace" value="' + data + '"><span class="lbl"></span></label';
                        },
                        "targets": 0, //指定渲染列：第一列(渲染第一列为单选框，data自动匹配为  {"data":"id"}中数据）,
                        "orderable": false
                    },
                    {
                        "render": function (data, type, row) {
                            if (data == 1){
                                return "超级管理员";
                            } else if (data == 2) {
                                return "普通管理员";
                            } else {
                                return "普通用户";
                            }
                        },
                        "targets": 5
                    }
                ]
                ,
                "oLanguage": { // 国际化配置
                    "sProcessing": "正在获取数据，请稍后...",
                    "sLengthMenu": "显示 _MENU_ 条",
                    "sZeroRecords": "没有找到数据",
                    "sInfo": "从 _START_ 到  _END_ 条记录 总记录数为 _TOTAL_ 条",
                    "sInfoEmpty": "记录数为0",
                    "sInfoFiltered": "(全部记录数 _MAX_ 条)",
                    "sInfoPostFix": "",
                    "sSearch": "查询",
                    "sUrl": "",
                    "oPaginate": {
                        "sFirst": "第一页",
                        "sPrevious": "上一页",
                        "sNext": "下一页",
                        "sLast": "最后一页"
                    }
                }

            });
        }

    init("");
    function reset(id){
        confrim("确定重置密码？","reset", {id:id},function (data) {
            if (data.status == 0){
                DuzUtils.notifySuccess("操作成功");
            }else {
                DuzUtils.notifyError(data.msg);
            }
        })
    }
    $(function () {
        $("#article_style").fix({
            float: 'left',
            //minStatue : true,
            skin: 'green',
            durationTime: false,
            stylewidth: '0',
            spacingw: 30,//设置隐藏时的距离
            spacingh: 250,//设置显示时间距
            set_scrollsidebar: '.Ads_style',
            table_menu: '.Ads_list'
        });

        $(".Ads_list, .order_list_style").css("margin-left", "0px");
        
        
        if ($("#promot").val() == "1"){
            toastr.info("你有新消息了!");
        }
    });
    //初始化宽度、高度
    $(".widget-box").height($(window).height());
    $(".Ads_list").width($(window).width());
    //当文档窗口发生改变时 触发
    $(window).resize(function () {
        $(".widget-box").height($(window).height());
        $(".Ads_list").width($(window).width());
    });

    function dele() {
        // var nTrs = dutyTable.fnGetNodes();
        var nTrs = $("input[type=checkbox]:checked");
        if (nTrs.length == 0|| (nTrs.length==1 && (nTrs[0].value=="on"||nTrs[0].value==""))){
            DuzUtils.notifyWarning("请选择要删除的数据");
            return;
        }

        var ids = "";
        for (var i = 0; i < nTrs.length; i++) {
            if (nTrs[i].value == "on" || nTrs[i].value == ""){
                continue;
            }
            ids += nTrs[i].value;
            if (i < nTrs.length-1){
                ids += ",";
            }
        }
        confrim("确定删除数据？","del", {id:ids},function (data) {
            if (data.status == 0){
                window.location.href="list";
            }else {
                DuzUtils.notifyError(data.msg);
            }
        })
    }

    /*******添加广告*********/
    $('#ads_add').on('click', function(){
        $.fn.zTree.init($("#treeDemo"), setting, zNodes);
        var treeObj = $.fn.zTree.getZTreeObj("treeDemo");
        var nodes = treeObj.getNodes();
        for (var i = 0; i < nodes.length; i++) { //设置节点展开
            treeObj.expandNode(nodes[i], true, true, true);
        }
        layer.open({
            type: 1,
            title: '目标机构',
            maxmin: true,
            shadeClose: false, //点击遮罩关闭层
            area : ['400px' , ''],
            content:$('#add_ads_style'),
            btn:['提交','取消'],
            yes:function(index,layero){
                layer.close(index);
            }
        });
    })

    var zNodes =[
        { id:1, pId:0, name:"NSTL", open:true},
        { id:11, pId:1, name:"资源部"},
        { id:12, pId:1, name:"中科"},
        { id:13, pId:1, name:"中信"},
        { id:14, pId:1, name:"农科"},
        { id:15, pId:1, name:"医科"},
    ];

    /**************/
    var setting = {
        view: {
            dblClickExpand: false,
            showLine: false,
            selectedMulti: false
        },
        data: {
            simpleData: {
                enable: true,
                idKey: "id",
                pIdKey: "pId",
                rootPId: ""
            }
        },
        callback: {
            beforeClick: function (treeId, treeNode) {
                return true;
            }
        }
    };
</script>

<script th:inline="javascript">
    /*<![CDATA[*/
    $(function () {
        if (promot.success == [[${promot}]]){
            DuzUtils.notifySuccess("操作成功");
        }
    })
    /*]]>*/
</script>
