// out: false
.tab {}

.tab-head {
    background-color: #fff;
    border-bottom: 1px solid #e8e8e8;
    display: flex;
    padding-top: 10px;
}

.tab-content {
    >div {
        display: none;
        &.active {
            display: block;
        }
    }
}

.tab-item {
    display: inline-block;
    padding: 10px 15px;
    font-size: 15px;
    position: relative;
    margin-left: 10px;
    margin-right: 10px;
    cursor: pointer;
    transition: all .3s;
    &::before {
        content: "";
        position: absolute;
        bottom: -1px;
        left: 0;
        width: 100%;
        height: 0;
        background-color: #1890FF;
    }
    &.active,
    &:hover {
        color: #1890FF;
        &::before {
            height: 2px;
        }
    }
}

.tab-2 {
    border-bottom: 0;
    padding: 15px 10px 0;
    .tab-item {
        border: 1px solid #ddd;
        border-bottom: 0;
        border-radius: 2px 2px 0 0;
        margin-left: 5px;
        margin-right: 5px;
        &.active,
        &:hover {
            background-color: #fafafa;
        }
        &::before {
            content: none;
        }
    }
}