<html xmlns="http://www.w3.org/1999/xhtml" xmlns:th="http://www.thymeleaf.org"
      xmlns:layout="http://www.ultraq.net.nz/thymeleaf/layout">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta name="renderer" content="webkit|ie-comp|ie-stand">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta http-equiv="Cache-Control" content="no-siteapp"/>
    <link href="../new/assets/css/bootstrap.min.css" rel="stylesheet"/>
    <link rel="stylesheet" href="../new/css/style.css"/>
    <link href="../new/assets/css/codemirror.css" rel="stylesheet">
    <link rel="stylesheet" href="../new/css/bootstrapStyle/bootstrapStyle.css" type="text/css">

    <link rel="stylesheet" href="../ace/components/select2/dist/css/select2.css" />
    <link rel="stylesheet" href="../new/assets/css/ace.min.css" class="ace-main-stylesheet" id="main-ace-style" />
    <link rel="stylesheet" href="../new/font/css/font-awesome.min.css"/>
    <!--[if lte IE 8]>
    <link rel="stylesheet" href="../new/assets/css/ace-ie.min.css"/>
    <![endif]-->
    <link href="../new/Widget/icheck/icheck.css" rel="stylesheet" type="text/css" />
    <link href="../new/Widget/webuploader/0.1.5/webuploader.css" rel="stylesheet" type="text/css" />



    <script src="../new/js/jquery-1.9.1.min.js"></script>
    <script src="../new/assets/js/bootstrap.min.js"></script>
    <script src="../new/assets/js/typeahead-bs2.min.js"></script>
    <script src="../new/assets/layer/layer.js" type="text/javascript"></script>
    <script src="../new/assets/laydate/laydate.js" type="text/javascript"></script>
    <script src="../new/js/H-ui.js" type="text/javascript"></script>
    <script src="../ace/components/jquery-validation/dist/jquery.validate.js"></script>
    <script type="text/javascript" src="../new/Widget/zTree/js/jquery.ztree.all-3.5.min.js"></script>
    <script src="../new/js/lrtk.js" type="text/javascript"></script>
    <script type="text/javascript" src="../business/common.js"></script>
    <script type="text/javascript" src="../business/base.js"></script>
    <title>添加套信息</title>
    <style type="text/css">
        .searchinput{
            border-right-width: 0px;
            padding-left: 3px;
            width: 168px;
            font-family: arial;
            float: left;
            border-top-width: 0px;
            border-bottom-width: 0px;
            color: #636365;
            margin-left: 4px;
            font-size: 8pt;
            vertical-align: middle;
            border-left-width: 0px;
            margin-right: 3px;
        }
        .tab_search{
            border-bottom: #cccccc 1px solid;
            border-left: #cccccc 1px solid;
            height: 25px;
            border-top: #cccccc 1px solid;
            border-right: #cccccc 1px solid;

        }
        .searchaction{
            width: 21px;
            float: left;
            height: 17px;
        }
    </style>
</head>

<body>
<div class="margin clearfix">
    <div class="article_style">
        <div class="add_content" id="form-article-add">
            <form id="validation-form">
                <input type="hidden" name="id" id="id" th:value="${cover?.id}"/>
                <ul>
                    <li class="clearfix Mandatory">
                        <label class="label_name"><i>*</i>套名称:</label>
                        <span class="formControls col-10">
                            <input name="coverName" type="text" id="coverName" class="col-xs-10 col-sm-6" th:value="${cover?.coverName}"/>
                        </span>
                    </li>
                    <li class="clearfix Mandatory"><label class="label_name"><i>*</i>EISSN:</label>
                        <span class="formControls col-10">
                            <input name="eissn" type="text" id="eissn" class="col-xs-10 col-sm-6 " th:value="${cover?.eissn}" />
                        </span>
                    </li>
                    <li class="clearfix Mandatory"><label class="label_name"><i>*</i>PISSN:</label>
                        <span class="formControls col-10">
                            <input name="pissn" type="text" id="pissn" class="col-xs-10 col-sm-6 " th:value="${cover?.pissn}" />
                        </span>
                    </li>
                    <li class="clearfix Mandatory"><label class="label_name"><i>*</i>EISBN:</label>
                        <span class="formControls col-10">
                            <input name="eisbn" type="text" id="eisbn" class="col-xs-10 col-sm-6 " th:value="${cover?.eisbn}" />
                        </span>
                    </li>
                    <li class="clearfix Mandatory"><label class="label_name"><i>*</i>PISBN:</label>
                        <span class="formControls col-10">
                            <input name="pisbn" type="text" id="pisbn" class="col-xs-10 col-sm-6 " th:value="${cover?.pisbn}" />
                        </span>
                    </li>

                    <li class="clearfix Mandatory"><label class="label_name"><i>*</i>出版社:</label>
                        <span class="formControls col-10">
                            <input name="publisher" type="text" id="publisher" class="col-xs-10 col-sm-6 " th:value="${cover?.publisher}"/>
                        </span>
                    </li>

                    <li class="clearfix Mandatory">
                        <label class="label_name"><i>*</i>出版国:</label>
                        <span class="formControls col-10">
                            <span class="add_date l_f">
                                <select class="form-control" name="pubCountry" id="pubCountry" style="margin-left: 10px;">
                                    <option th:each="pubCountry:${pubCountrys}" th:value="${pubCountry.id}" th:text="${pubCountry.name}" th:selected="${pubCountry.id==cover?.pubCountry}"></option>
                                </select>
                            </span>
                        </span>
                    </li>

                    <li class="clearfix Mandatory">
                        <label class="label_name"><i>*</i>学科:</label>
                        <span class="formControls col-10">
                            <span class="add_date l_f">
                                <select name="subject" id="subject" class="form-control" style="margin-left: 10px;">
                                    <option th:each="subject:${subjects}" th:value="${subject.id}" th:text="${subject.name}"th:selected="${subject.id==cover?.subject}"></option>
                                </select>
                            </span>
                        </span>
                    </li>

                    <li class="clearfix Mandatory">
                        <label class="label_name"><i>*</i>语种:</label>
                        <span class="formControls col-10" style="margin-left: 20px;">
                            <span class="add_date l_f">
                                <select multiple="" id="language" name="language" class="select2" data-placeholder="Click to Choose..." style="margin-left: 10px">
                                    <option th:each="language:${languages}" th:value="${language.id}" th:text="${language.name}"></option>
                                </select>
                            </span>
                        </span>
                    </li>

                </ul>
            </form>
            <div class="Button_operation" style="margin-left: 226px">
                <button onclick="cover_save_submit();" class="btn btn-primary radius" type="submit"> 保存并提交
                </button>
                <a class="btn btn-default radius" href="/coverinfo/list" type="button"> &nbsp;&nbsp;取消 &nbsp;&nbsp;
                </a>
            </div>
        </div>
    </div>
</div>
<input type="hidden" id="languageIds" th:value="${languageIds}"/>
<script src="../ace/components/select2/dist/js/select2.js"></script>
</body>
<script type="text/javascript">
    /**提交操作**/
    function cover_save_submit() {
        if (!$("#validation-form").valid()) {
            return false;
        }
        var str2value= $('#language').select2('data');
        var languageIds = "";
        if (str2value.length ==0){
            DuzUtils.notifyWarning("选择语种");
            return;
        }else {
            for (var i = 0; i < str2value.length; i++) {
                languageIds += str2value[i].id;
                if (i<str2value.length-1){
                    languageIds += ",";
                }
            }
        }
        var data = {
            coverName:$("#coverName").val(),
            eissn:$("#eissn").val(),
            pissn:$("#pissn").val(),
            eisbn:$("#eisbn").val(),
            pisbn:$("#pisbn").val(),
            publisher:$("#publisher").val(),
            language:languageIds,
            pubCountry:$("#pubCountry").find("option:selected").attr("value"),
            subject:$("#subject").find("option:selected").attr("value"),
            id:$("#id").val()
        }
        $.ajax({
            url:"/coverinfo/save",
            type:"post",
            datatype:"json",
            data:data,
            success:function (data) {
                console.log(data);
                if (data.status == 0){
                    window.location.href="/coverinfo/list?promot="+promot.success;
                } else {
                    DuzUtils.notifyError(data.msg);
                }
            },
            error:function (data) {
                console.log(data);
            }
        })
    }

    function echoSelect2(dom,value){
        $.each(value,function(index,value){
            $(dom).append(new Option(value.text, value.id, false, true));
        });
        $(dom).trigger("change");
    }

    $(function () {

        jQuery.validator.addMethod("phone", function (value, element) {
            return this.optional(element) || /^[1][3,4,5,7,8][0-9]{9}$/.test(value);
        }, "<span style='color:red;'> &nbsp;手机号码格式不正确</span>");

        jQuery.validator.addMethod("email", function (value, element) {
            return this.optional(element) || /^[A-Za-z0-9\u4e00-\u9fa5]+@[a-zA-Z0-9_-]+(\.[a-zA-Z0-9_-]+)+$/.test(value);
        }, "<span style='color:red;'> &nbsp;填写正确的邮箱</span>");

        $('#validation-form').validate({
            focusInvalid: false,
            rules: {
                username: {
                    required: true,
                    minlength: 5,
                    maxlength: 20
                },
                password: {
                    required: true,
                    minlength: 6,
                    maxlength: 10
                },
                password2: {
                    required: true,
                    equalTo: "#password",
                    maxlength: 10
                },
                realName: {
                    required: true,
                    maxlength: 30
                },
                email: {
                    required: true,
                    email: true,
                    maxlength: 50
                },
                phone: {
                    required: true,
                    phone: true
                },
                organId: {
                    required: true
                },
            },
            messages: {
                username:{
                    required : "<span style='color:red;'> &nbsp;必填项</span>",
                    minlength : "<span style='color:red;'> &nbsp;长度最少为5位</span>",
                    maxlength : "<span style='color:red;'> &nbsp;长度最多为20位</span>"
                },
                password: {
                    required: "<span style='color:red;'> &nbsp;必填项</span>",
                    minlength: "<span style='color:red;'> &nbsp;长度最少为6位</span>",
                    maxlength : "<span style='color:red;'> &nbsp;长度最多为10位</span>"
                },
                password2:{
                    required : "<span style='color:red;'> &nbsp;必填项</span>",
                    equalTo:  "<span style='color:red;'> &nbsp;与密码保持一致</span>",
                    maxlength : "<span style='color:red;'> &nbsp;长度最多为10位</span>"
                },
                realName:{
                    required : "<span style='color:red;'> &nbsp;必填项</span>",
                    maxlength : "<span style='color:red;'> &nbsp;长度最多为30位</span>"
                },
                email:{
                    required : "<span style='color:red;'> &nbsp;必填项</span>",
                    email : "<span style='color:red;'> &nbsp;填写正确的邮箱</span>",
                    maxlength : "<span style='color:red;'> &nbsp;长度最多为50位</span>"
                },
                phone:{
                    required : "<span style='color:red;'> &nbsp;必填项</span>"
                },
                organId:{
                    required : "<span style='color:red;'> &nbsp;必选项</span>"
                }
            },


            highlight: function (e) {
                $(e).closest('.form-group').removeClass('has-info').addClass('has-error');
            },

            success: function (e) {
                $(e).closest('.form-group').removeClass('has-error');//.addClass('has-info');
                $(e).remove();
            },

            errorPlacement: function (error, element) {
                if(element.is('input[type=checkbox]') || element.is('input[type=radio]')) {
                    var controls = element.closest('div[class*="col-"]');
                    if(controls.find(':checkbox,:radio').length > 1) controls.append(error);
                    else error.insertAfter(element.nextAll('.lbl:eq(0)').eq(0));
                }
                else if(element.is('.select2')) {
                    error.insertAfter(element.siblings('[class*="select2-container"]:eq(0)'));
                }
                else if(element.is('.chosen-select')) {
                    error.insertAfter(element.siblings('[class*="chosen-container"]:eq(0)'));
                }
                else error.insertAfter(element);
            },

            submitHandler: function (form) {

            },
            invalidHandler: function (form) {
            }
        });
        var options = {
            allowClear:true
        };

        $(".select2").css('width','400px').select2(options);
        var languageIds = $("#languageIds").val();
        if (!isBlank(languageIds)){
            var data = languageIds.split(",");
            var arr = [];
            for (var i = 0; i < data.length; i++) {
                arr.push(data[i]);
            }
            $(".select2").select2().val(arr).trigger("change");
        }
    })
</script>

</html>
